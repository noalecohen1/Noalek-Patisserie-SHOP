@model Patisserie.Models.Branch

@{
    ViewBag.Title = Model.Name;
}

<div class="row justify-content-between">
    <h1 class="my-4">@ViewBag.Title</h1>

    <span class="col-4 d-flex flex-row-reverse align-items-center">
        @if (Patisserie.Controllers.Utl.IsAdmin(Session))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.BranchID }, new { @class = "btn btn-primary" })
        }
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary", style = "margin-right: 1em;" })
    </span>
</div>

<hr class="accessory" />


<div class="row">
    @Html.Partial("_Map", Model.Address)
    <dl class="dl-horizontal col-12 col-md-6">
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

    </dl>
</div>
